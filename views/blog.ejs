<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= local.title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white">
    <section class="mx-auto px-4 sm:px-5 xl:max-w-6xl xl:px-1">
        <div class="flex h-screen flex-col">
            <%- include('./partial/header.ejs') %>
            <main class="conatiner mb-auto">
                <div class="">
                    <ul class="divide-y divide-gray-700">
                        <% data.reverse().forEach(post => { %>

                        <li class="py-12">
                            <article>
                                <div class="space-y-2 ">
                                    <div class="mx-auto">
                                        <img src="<%= post.banner %>" class="max-w-90" alt="banner">
                                        <dl>
                                            <dd class="text-base font-medium leading-6 text-gray-400">
                                                <time><%= post.updatedAt %></time>
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="mx-auto space-y-5">
                                        <div class="space-y-5">
                                            <div>
                                                <h2 class="text-2xl font-bold">
                                                    <a class="text-gray-200 hover:text-gray-100" href="/blog/<%= post.url %>"><%= post.title %></a>
                                                </h2>
                                                <a class="mr-3 text-sm font-medium uppercase text-primary-500" href="/tags/"><%= post.tags %></a>
                                            </div>
                                        </div>
                                        <div class="text-base font-medium leading-6">
                                            <a class="text-fuchsia-500 hover:text-fuchsia-400" href="/blog/<%= post.url %>">Read more â†’</a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </li>
                        <% }) %>
            
                    </ul>
                </div>
                 
            </main>
            <%- include('./partial/footer.ejs') %>
        </div>
    </section>
</body>
</html>